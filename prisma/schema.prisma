// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Slide {
  id        String      @id @default(uuid())
  title     String
  createdAt DateTime @default(now())
  talkId    String
  sortOrder Int
  bulletPoints String[]
  notes String[]
  userId    String
}

model Talk {
  id        String      @id @default(uuid())
  title     String
  talkLength Int
  createdAt DateTime @default(now())
  abstract  String
  topic    String
  userId    String
}